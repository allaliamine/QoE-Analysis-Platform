{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VideoStreamingKPI",
  "description": "Schema for video streaming KPI metrics",
  "type": "object",
  "properties": {
    "throughput": {
      "type": "number",
      "description": "Network throughput in Kbps",
      "minimum": 0,
      "maximum": 10000
    },
    "avg_bitrate": {
      "type": "number",
      "description": "Average bitrate in Kbps",
      "minimum": 0,
      "maximum": 10000
    },
    "delay_qos": {
      "type": "number",
      "description": "Quality of Service delay in milliseconds",
      "minimum": 0,
      "maximum": 1000
    },
    "jitter": {
      "type": "number",
      "description": "Network jitter in milliseconds",
      "minimum": 0,
      "maximum": 100
    },
    "packet_loss": {
      "type": "number",
      "description": "Packet loss percentage",
      "minimum": 0,
      "maximum": 100
    }
  },
  "required": [
    "throughput",
    "avg_bitrate",
    "delay_qos",
    "jitter",
    "packet_loss"
  ],
  "additionalProperties": false
}
