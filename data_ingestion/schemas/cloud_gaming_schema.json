{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CloudGamingKPI",
  "description": "Schema for cloud gaming KPI metrics",
  "type": "object",
  "properties": {
    "CPU_usage": {
      "type": "integer",
      "description": "CPU usage percentage",
      "minimum": 0,
      "maximum": 100
    },
    "GPU_usage": {
      "type": "integer",
      "description": "GPU usage percentage",
      "minimum": 0,
      "maximum": 100
    },
    "Bandwidth_MBps": {
      "type": "number",
      "description": "Bandwidth in megabytes per second",
      "minimum": 0,
      "maximum": 1000
    },
    "Latency_ms": {
      "type": "integer",
      "description": "Network latency in milliseconds",
      "minimum": 0,
      "maximum": 1000
    },
    "FrameRate_fps": {
      "type": "integer",
      "description": "Frame rate in frames per second",
      "minimum": 0,
      "maximum": 240
    },
    "Jitter_ms": {
      "type": "integer",
      "description": "Network jitter in milliseconds",
      "minimum": 0,
      "maximum": 100
    }
  },
  "required": [
    "CPU_usage",
    "GPU_usage",
    "Bandwidth_MBps",
    "Latency_ms",
    "FrameRate_fps",
    "Jitter_ms"
  ],
  "additionalProperties": false
}
